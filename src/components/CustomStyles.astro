---
import '@fontsource/source-sans-pro';
import '@fontsource/cormorant-garamond';
import '@fontsource/raleway';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Source Sans Pro';
    --aw-font-serif: 'Cormorant Garamond';
    --aw-font-heading: 'Cormorant Garamond';

    /* Warm beige palette with rgb(200, 190, 183) background */
    --aw-color-bg-page: rgb(155, 140, 113);     /* Main beige background */
    --aw-color-primary: rgb(255 175 115);     /* Darker beige for contrast */
    --aw-color-secondary: rgb(51,41,31);   /* Even darker beige */
    --aw-color-accent: rgb(255 214 181);         /* Deep warm gray for emphasis */
    
    --aw-color-text-heading: rgb(66, 62, 58);   /* Dark gray for headings */
    --aw-color-text-default: rgb(48, 45, 42);   /* Nearly black for main text */
    --aw-color-text-muted: rgb(48, 45, 42 / 66%); /* Semi-transparent text */

    --aw-color-bg-page-dark: rgb(48, 45, 42);   /* Dark mode background */

    ::selection {
      background-color: var(--aw-color-accent);
      color: var(--aw-color-text-default);
    }
  }

  .dark {
    --aw-font-sans: 'Source Sans Pro';
    --aw-font-serif: 'Cormorant Garamond';
    --aw-font-heading: 'Cormorant Garamond';

    --aw-color-bg-page: rgb(48, 45, 42);        /* Dark background */
    --aw-color-primary: rgb(200, 190, 183);     /* Original beige as primary */
    --aw-color-secondary: rgb(166, 154, 145);   /* Lighter beige */
    --aw-color-accent: rgb(226, 220, 215);      /* Very light beige */
    
    --aw-color-text-heading: rgb(226, 220, 215);
    --aw-color-text-default: rgb(200, 190, 183);
    --aw-color-text-muted: rgb(200, 190, 183 / 66%);

    ::selection {
      background-color: var(--aw-color-accent);
      color: var(--aw-color-bg-page);
    }
  }
</style>
