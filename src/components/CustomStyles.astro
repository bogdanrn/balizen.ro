---
import '@fontsource-variable/inter';
import '@fontsource/cormorant-garamond';
import '@fontsource/raleway';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Raleway';
    --aw-font-serif: 'Cormorant Garamond';
    --aw-font-heading: 'Cormorant Garamond';

    /* Warmer, more energetic colors with orange undertones */
    --aw-color-primary: rgb(198, 137, 98);     /* Warm terracotta */
    --aw-color-secondary: rgb(171, 112, 74);   /* Rich copper */
    --aw-color-accent: rgb(226, 164, 122);     /* Soft peach */

    --aw-color-text-heading: rgb(89, 49, 27);  /* Deep bronze */
    --aw-color-text-default: rgb(66, 41, 24);  /* Rich brown */
    --aw-color-text-muted: rgb(66, 41, 24 / 66%);
    --aw-color-bg-page: rgb(255, 252, 248);    /* Warm white */

    --aw-color-bg-page-dark: rgb(48, 32, 24);  /* Deep warm brown */

    ::selection {
      background-color: var(--aw-color-accent);
      color: white;
    }
  }

  .dark {
    --aw-font-sans: 'Raleway';
    --aw-font-serif: 'Cormorant Garamond';
    --aw-font-heading: 'Cormorant Garamond';

    --aw-color-primary: rgb(226, 164, 122);    /* Soft peach */
    --aw-color-secondary: rgb(198, 137, 98);   /* Warm terracotta */
    --aw-color-accent: rgb(241, 190, 155);     /* Light peach */

    --aw-color-text-heading: rgb(255, 252, 248);
    --aw-color-text-default: rgb(255, 243, 235);
    --aw-color-text-muted: rgb(255, 243, 235 / 66%);
    --aw-color-bg-page: rgb(48, 32, 24);       /* Deep warm brown */

    ::selection {
      background-color: var(--aw-color-accent);
      color: var(--aw-color-bg-page);
    }
  }
</style>
