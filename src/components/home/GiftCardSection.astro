---
import { Icon } from 'astro-icon/components';

import Image from '../common/Image.astro';
import type { GiftCardSection } from '../../types';
import { cn } from '../../utils/cn';

const { giftCard } = Astro.props as { giftCard: GiftCardSection };
---

<section id={giftCard.id} class="relative overflow-hidden bg-[#33291F] text-white">
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-gradient-to-br from-primary/40 via-[#33291F] to-[#33291F]"></div>
  </div>

  <div
    class="relative mx-auto flex max-w-screen-xl flex-col gap-12 px-4 py-24 sm:px-6 lg:flex-row lg:items-center lg:px-8"
  >
    <div class="max-w-xl space-y-8">
      <p class="text-sm font-semibold uppercase tracking-[0.35em] text-primary/80">Gift Card</p>
      <h2 class="font-heading text-3xl font-bold leading-tight sm:text-4xl">
        {giftCard.title}
      </h2>
      <div class="space-y-4 text-base leading-relaxed text-white/85">
        {giftCard.description.map((paragraph) => <p>{paragraph}</p>)}
      </div>

      <ul class="space-y-4">
        {
          giftCard.features.map((feature) => (
            <li class="flex items-start gap-4 rounded-2xl bg-white/10 p-4">
              <span class="mt-1 inline-flex h-10 w-10 shrink-0 items-center justify-center rounded-full bg-primary/20 text-primary">
                <Icon name={feature.icon} class="h-5 w-5" />
              </span>
              <div>
                <h3 class="font-semibold text-white">{feature.title}</h3>
                <p class="text-sm text-white/75">{feature.description}</p>
              </div>
            </li>
          ))
        }
      </ul>

      <div>
        <a
          href={giftCard.cta.href}
          class={cn(
            'inline-flex items-center gap-2 rounded-full bg-primary px-6 py-3 text-sm font-semibold text-white shadow-lg shadow-primary/40 transition hover:brightness-110',
            giftCard.cta.class
          )}
          target={giftCard.cta.target}
          rel="noopener"
        >
          <Icon name={giftCard.cta.icon ?? 'tabler:gift'} class="h-5 w-5" />
          <span>{giftCard.cta.label}</span>
        </a>
      </div>
    </div>

    <div class="flex w-full max-w-md justify-center">
      <div class="overflow-hidden rounded-3xl border border-white/20 shadow-xl shadow-primary/30">
        <Image
          src={giftCard.image.src}
          alt={giftCard.image.alt}
          class="h-full w-full object-cover"
          layout="responsive"
          sizes="(min-width: 1024px) 30vw, 80vw"
        />
      </div>
    </div>
  </div>
</section>
