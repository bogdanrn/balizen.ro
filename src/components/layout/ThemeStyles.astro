---
import '@fontsource/source-sans-pro';
import '@fontsource/cormorant-garamond';
import '@fontsource/raleway';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Source Sans Pro';
    --aw-font-serif: 'Cormorant Garamond';
    --aw-font-heading: 'Cormorant Garamond';

    --aw-color-bg-page: rgb(155, 140, 113);
    --aw-color-primary: rgb(255 175 115);
    --aw-color-secondary: rgb(51, 41, 31);
    --aw-color-accent: rgb(255 214 181);

    --aw-color-text-heading: rgb(66, 62, 58);
    --aw-color-text-default: rgb(48, 45, 42);
    --aw-color-text-muted: rgb(48, 45, 42 / 66%);

    --aw-color-bg-page-dark: rgb(48, 45, 42);

    ::selection {
      background-color: var(--aw-color-accent);
      color: var(--aw-color-text-default);
    }
  }
</style>
