---
import MainLayout from './MainLayout.astro';

import { siteConfig } from '../utils/content';

const { frontmatter } = Astro.props;
const title = frontmatter?.title ?? siteConfig.brand.name;
const description = frontmatter?.description ?? siteConfig.brand.description;
---

<MainLayout title={`${title} Â· ${siteConfig.brand.name}`} description={description}>
  <section class="bg-slate-50 py-20">
    <div class="mx-auto max-w-3xl space-y-8 rounded-3xl border border-slate-200 bg-white px-6 py-12 shadow-sm sm:px-10">
      <header class="space-y-2 text-center">
        <p class="text-sm font-semibold uppercase tracking-[0.35em] text-primary">Document</p>
        <h1 class="font-heading text-3xl font-bold text-slate-900">{title}</h1>
        {frontmatter?.description && <p class="text-sm text-slate-600">{frontmatter.description}</p>}
      </header>
      <article
        class="prose prose-slate max-w-none prose-headings:font-heading prose-a:text-primary prose-strong:text-slate-900"
      >
        <slot />
      </article>
    </div>
  </section>
</MainLayout>
